
<%= @task.title %>
<%= @task.details %>
<%= @task.completed %>


<%= form_for(@task) do |f| %>
<%= f.hidden_field :completed, value: true %>
  <%= f.submit 'mark as done' %>
<% end %>


<%= link_to("Homepage", tasks_path) %>
<%= link_to("Edit", edit_task_path(@task)) %>
<%= link_to("Delete", delete_task_path(@task), method: 'delete') %>
<%= link_to("mark as done", validate_task_path(@task), method: 'post') %>



